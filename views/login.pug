extends layout

block login
    <div class="jumbotron" style="align-items:center;">
        <h1 class="display-4">Log In</h1>
        <p class="lead">Please log in to continue.</p>
        <hr class="my-4">
        <form action="login" method="POST">
            <div class="form-group row">
                <label for="inputUserl3" class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="inputUserl3" placeholder="User", name="username">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-4">
                    <input type="password" class="form-control" id="inputPassword3" placeholder="Password", name="password">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Sign in</button>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <a href="/mailer"> Home Page</a>
                </div>
            </div>
        </form>
    </div>
